<html lang="en">
  <head>
   {{>headerLinks}}
  </head>
  <body>
    {{>navbar}}

    <!-- main page  -->
    <div class="container-fluid main_header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <!-- main header left -->
          <div class="row">
            <div class="col-md-6 col-12 main_header_left">
              <p>Welcome to Weather App</p>
              <h1>
                Get The Latest
                <span class="text_clr">Weather</span>
                Info Of yout City
              </h1>
              <a href="/weather"><button>Check Now</button></a>
            </div>
            <!-- main header Right -->
            <div class="col-md-6 col-12 main_header_right">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img class="w-100" src="img/imag-1.jpg" alt="First slide" />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="w-100"
                      src="img/imag-2.jpg"
                      alt="Second slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img class="w-100" src="img/imag-3.jpg" alt="Third slide" />
                  </div>
                </div>
                <a
                  class="carousel-control-prev"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a
                  class="carousel-control-next"
                  href="#carouselExampleControls"
                  role="button"
                  data-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="sr-only">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- footer code -->
    {{>footer}}
  </body>
</html>